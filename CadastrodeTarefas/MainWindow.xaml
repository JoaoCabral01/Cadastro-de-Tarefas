<Window
    x:Class="CadastroDeTarefas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:CadastroDeTarefas.Models">

    <StackPanel Padding="20" Spacing="12">

        <TextBox
            PlaceholderText="Nome da tarefa"
            Text="{Binding NomeTarefa, Mode=TwoWay}" />

        <Button Content="Adicionar"
                Click="Adicionar_Click" />

        <ListView ItemsSource="{Binding Tarefas}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Tarefa">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{Binding Id}" />
                        <TextBlock Text="{Binding Nome}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Window>
