<Window
    x:Class="CadastroDeTarefas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CadastroDeTarefas"
    xmlns:models="using:CadastroDeTarefas.Models"
    Title="Cadastro de Tarefas">

    <StackPanel x:Name="RootPanel" Padding="20" Spacing="12">

        <TextBox
            PlaceholderText="Nome da tarefa"
            Text="{Binding NomeTarefa, Mode=TwoWay}" />

        <Button Content="Adicionar"
                Click="Adicionar_Click" />

        <ListView ItemsSource="{Binding Tarefas}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="12" Padding="6">
                        <TextBlock Text="{Binding Id}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding Nome}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Window>
